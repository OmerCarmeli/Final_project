<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/itemDescriptionDTV"
        android:layout_width="260dp"
        android:layout_height="57dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="2dp"
        android:text="description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/itemDPhoto"
        app:layout_constraintTop_toBottomOf="@+id/itemDPriceTV" />

    <ImageView
        android:id="@+id/itemDPhoto"
        android:layout_width="96dp"
        android:layout_height="85dp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemDNameTV"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/itemDPriceTV"
        android:layout_width="147dp"
        android:layout_height="26dp"
        android:layout_marginEnd="118dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:text="Price:"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/itemDPhoto"
        app:layout_constraintTop_toBottomOf="@+id/itemDNameTV" />

    <TextView
        android:id="@+id/itemDNameTV"
        android:layout_width="153dp"
        android:layout_height="34dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemSizeTextViewi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/itemDPriceTV"
        app:layout_constraintTop_toBottomOf="@+id/itemDNameTV" />
</android.support.constraint.ConstraintLayout>