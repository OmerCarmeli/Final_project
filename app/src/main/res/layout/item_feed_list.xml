<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/postUserProfilePic"
        android:layout_width="72dp"
        android:layout_height="47dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <Button
        android:id="@+id/commentButton"
        android:layout_width="102dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:text="Comments"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemDPhoto" />

    <Button
        android:id="@+id/likeButton"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginStart="9dp"
        android:text="Like"
        app:layout_constraintBottom_toTopOf="@+id/newCommentEditText"
        app:layout_constraintStart_toEndOf="@+id/commentButton" />

    <EditText
        android:id="@+id/newCommentEditText"
        android:layout_width="311dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="text"
        android:text="add comment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commentButton" />

    <TextView
        android:id="@+id/descriptionTV"
        android:layout_width="260dp"
        android:layout_height="57dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="2dp"
        android:text="description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/itemDPhoto"
        app:layout_constraintTop_toBottomOf="@+id/itemDPriceTV" />

    <Button
        android:id="@+id/addCommentButton"
        android:layout_width="49dp"
        android:layout_height="39dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="11dp"
        android:text="add"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/newCommentEditText" />

    <ImageView
        android:id="@+id/itemDPhoto"
        android:layout_width="96dp"
        android:layout_height="85dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postUserProfilePic"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/postUserNameTV"
        android:layout_width="100dp"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/postUserProfilePic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemDPriceTV"
        android:layout_width="147dp"
        android:layout_height="26dp"
        android:layout_marginEnd="118dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="11dp"
        android:text="Price:"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/itemDPhoto"
        app:layout_constraintTop_toBottomOf="@+id/postUserNameTV" />

    <TextView
        android:id="@+id/itemDNameTV"
        android:layout_width="123dp"
        android:layout_height="34dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/postUserNameTV"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>